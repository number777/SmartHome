<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ongard"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_controldevice">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:gravity="start"
        android:text="ชื่อผู้ใช้งาน : "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ff000000"
        android:textStyle="bold"
        style="@style/TextStyle"/>

    <TextView
        android:id="@+id/txtfname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/textView3"
        android:gravity="start"
        style="@style/TextStyle"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold" />
    <TableLayout
        android:id="@+id/tbl_test"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:stretchColumns="1">

        <TableRow android:layout_margin="1dp" android:background="#F4A460">

            <TextView android:layout_column="0" android:gravity="center"
                android:text="ชื่อ"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView android:layout_column="1" android:gravity="center"
                android:text="สถานะ"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView android:layout_column="1" android:gravity="center"
                android:text="ควบคุม"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp">

            <TextView
                android:id="@+id/txtnameSW1"
                android:layout_column="0"
                android:hint="Name1"
                style="@style/TextStyleBlack"
                android:text="NAME1"
                android:textColor="#673AB7"
                android:textSize="15dp"
                android:textStyle="bold" />
            <ImageView android:id="@+id/imageView_status1"
                android:layout_column="1"
                android:src="@drawable/turn_on_off_power_24"
                android:text="padding right 0dp" />

            <ToggleButton android:id="@+id/Togglebtn1"
                android:layout_column="2"
                android:checked="false"
                />


        </TableRow>

        <TableRow

            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:paddingRight="2dp">

            <TextView
                android:id="@+id/txtnameSW2"
                android:layout_column="0"
                android:hint="Name2"
                style="@style/TextStyleBlack"
                android:text="NAME1"
                android:textColor="#2196F3"
                android:textSize="15dp"
                android:textStyle="bold" />
            <ImageView android:id="@+id/imageView_status2"
                android:layout_column="1"
                android:src="@drawable/turn_off_on_power_24"
                android:text="padding right 1dp" />

            <ToggleButton android:id="@+id/Togglebtn2"
                android:layout_column="2"
                android:checked="false" />

        </TableRow>

        <TableRow

            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:paddingRight="3dp">

            <TextView
                android:id="@+id/txtnameSW3"
                android:layout_column="0"
                android:hint="Name3"
                style="@style/TextStyleBlack"
                android:text="NAME1"
                android:textColor="#009688"
                android:textSize="15dp"
                android:textStyle="bold" />
            <ImageView android:id="@+id/imageView_status3"
                android:layout_column="1"
                android:src="@drawable/turn_on_off_power_24"
                android:text="padding right 2dp" />

            <ToggleButton android:id="@+id/Togglebtn3"
                android:layout_column="2"
                android:checked="false" />

        </TableRow>

        <TableRow

            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:paddingRight="4dp"
           >

            <TextView
                android:id="@+id/txtnameSW4"
                android:layout_column="0"
                android:hint="Name4"
                style="@style/TextStyleBlack"
                android:text="NAME1"
                android:textColor="#FF5722"
                android:textSize="15dp"
                android:textStyle="bold" />
            <ImageView android:id="@+id/imageView_status4"
                android:layout_column="1"
                android:src="@drawable/turn_off_on_power_24" />

            <ToggleButton android:id="@+id/Togglebtn4"
                android:layout_column="2"
                android:checked="false" />

        </TableRow>
        <TableRow

            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:paddingRight="4dp">

        </TableRow>

    </TableLayout>

    <TextView
        style="@style/TextStyle"
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ไอพี : "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ff000000"
        android:textStyle="bold"
        android:layout_above="@+id/tbl_test"
        android:layout_toRightOf="@+id/linearLayout15"
        android:layout_toEndOf="@+id/linearLayout15" />

    <TextView
        style="@style/TextStyle"
        android:id="@+id/txt_ipserver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/textView5"
        android:hint="IP Address"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/txtfname"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/turn_on_off_power"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/btnDeleteAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            style="@style/TextStyleBlack"
            android:text="คือ สถานะอุปกรณ์ที่เปิดอยู่"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#64DD17" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/turn_off_on_power" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/TextStyleBlack"
            android:layout_marginLeft="20dp"
            android:text="คือ สถานะอุปกรณ์ที่ปิดอยู่"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#F44336" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="***หมายเหตุ "
        android:textColor="#F44336"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        style=""
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="#607D8B"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_below="@+id/tbl_test"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_column="2"
            android:layout_marginRight="5dp"
            android:hint="5dp"
            android:background="@drawable/btn_rf"
            android:text="รีเฟรช"
            style="@style/ButtonText"
            android:textSize="12dp"
            android:drawableLeft="@drawable/ic_sync_green"
            />

        <Button
            android:id="@+id/Disconnect_sev"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_column="3"
            android:height="5dp"
            android:background="@drawable/btn_can"
            android:text="ยกเลิกการเชื่อมต่อ"
            style="@style/ButtonText"
            android:textSize="12dp"
            android:drawableLeft="@drawable/ic_sync_disabled_white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            style="@style/TextStyle"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:text="สถานะ : "
            android:textColor="#ff000000"
            android:textStyle="bold"
            />

        <TextView
            style="@style/TextStyle"
            android:id="@+id/txtconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:hint="Offline/Online"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignTop="@+id/linearLayout15"
        android:text="พอร์ต : "
        android:textColor="#000000"
        android:textStyle="bold"
        style="@style/TextStyle"/>

    <TextView
        style="@style/TextStyle"
        android:id="@+id/txt_portServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView36"
        android:layout_toRightOf="@+id/textView36"
        android:hint="Port" />


</RelativeLayout>