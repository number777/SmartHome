<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.number_7.navigation.History">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="54dp"
        android:stretchColumns="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true">

        <TableRow
            android:background="#F4A460"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:text="ชื่อ"
                android:layout_column="0"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="สถานะ"
                android:layout_column="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="เปิด"
                android:layout_column="2"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="ปิด"
                android:layout_column="2"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="ผู้ใช้งาน"
                android:layout_column="4"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:text="หลังบ้าน"
                android:layout_column="0"
                android:id="@+id/textView21"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:text="padding right 0dp"
                android:layout_column="1"
                android:src="@drawable/turn_on_off_power_24"
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <ToggleButton
                android:checked="false"
                android:layout_column="3"
                android:id="@+id/toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:paddingRight="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:text="หน้าบ้าน"
                android:layout_column="0"
                android:id="@+id/textView22"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:text="padding right 1dp"
                android:layout_column="1"
                android:src="@drawable/turn_off_on_power_24"
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <ToggleButton
                android:checked="false"
                android:layout_column="3"
                android:id="@+id/toggleButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:paddingRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:text="ห้องนอน"
                android:layout_column="0"
                android:id="@+id/textView23"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:text="padding right 2dp"
                android:layout_column="1"
                android:src="@drawable/turn_on_off_power_24"
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <ToggleButton
                android:checked="false"
                android:layout_column="3"
                android:id="@+id/toggleButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:paddingRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:text="ปลั้กไฟ"
                android:layout_column="0"
                android:id="@+id/textView24"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/turn_off_on_power_24"
                android:layout_column="1"
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <ToggleButton
                android:checked="false"
                android:layout_column="3"
                android:id="@+id/toggleButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:paddingRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableLayout>

</RelativeLayout>
